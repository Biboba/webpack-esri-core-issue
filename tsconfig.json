{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["dom", "es2015.promise", "es5", "es6"],
      "target": "esnext",
      "noImplicitAny": true,
      "removeComments": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "isolatedModules": false,
      "experimentalDecorators": true,
      "declaration": false,
      "noLib": false,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "suppressImplicitAnyIndexErrors": true,
      "strictNullChecks": true,
  
      "outDir": "./dist/",
      "sourceMap": true,
      "noEmitOnError": false,
      "noUnusedLocals": true,
      "importHelpers": true,
      "skipLibCheck": true
    },
    "types": [
      "arcgis-js-api",
      "moment"
    ],
    "include": [
      "src/**/*"
    ]
  }
  